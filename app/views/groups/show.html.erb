<div class="col-md-12">
  <div class="group">
<!-- 以下是对user进行成员的判断 -->
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
      <label class="label label-success">team member </label>
      <% else %>
      <label class="label label-warning">not team member </label>
      <% end %>
    </span>
    
    <%= link_to('write a post', new_group_post_path(@group), class: 'btn btn-warning pull-right') %>
    <% if current_user && current_user == @group.user %>
    <%= link_to("edit", edit_group_path(@group), class: 'btn btn-primary pull-right') %>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

<!-- 以下是post的相关内容 -->
<table class="table">
  <thead>
    <tr>
      <th>article content</th>
      <th>creator</th>
      <th>creator time</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @posts %>

</div>

</div>
